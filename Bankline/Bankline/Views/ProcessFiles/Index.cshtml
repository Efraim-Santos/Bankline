@model BankStatementDefaultViewModel;

<h1>Resultado das transações</h1>

<form asp-controller="ProcessFiles" asp-action="CreatedDBNewRegisterOfExtractBank" enctype="multipart/form-data" method="post">
    @for (int i = 0; i < Model.Transacoes.Count; i++)
    {
        <input type="hidden" name="type" value="@Model.Transacoes[i].Type" />
        <input type="hidden" name="date" value="@Model.Transacoes[i].Date">
        <input type="hidden" name="valor" value="@Model.Transacoes[i].Valor">
        <input type="hidden" name="descricao" value="@Model.Transacoes[i].Descricao">
    }
    <input type="submit" class="btn btn-primary" value="Salvar Dados">
</form>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Data</th>
            <th scope="col">Tipo da Transação</th>
            <th scope="col">Valor</th>
            <th scope="col">Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Transacoes)
        {
            <tr>
                <th scope="row">@transaction.Date</th>
                <td>@transaction.Type</td>
                <td>@transaction.Valor</td>
                <td>@transaction.Descricao</td>
            </tr>
        }
    </tbody>
</table>